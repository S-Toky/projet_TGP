<html>
  <body class ="text-center">
    <!-- ... -->
    <h1>Create a new gossip </h1>
         <%= form_tag url_for(action: 'create'), method: "post" do %>

         <%= label_tag 'Title' %> </br>
          <%= text_field_tag 'title', @gossips.title %>
          <br /> <br /> 

          <%= label_tag 'content' %></br>
          <%= text_area_tag 'content', @gossips.content %>
          <br /> <br />

          <%= submit_tag "Create Post" %>

        <% end %>

        <% if flash[:success] %>
         <div class="success"><%= flash[:success] %></div>
        <% end %>


 <% if @gossips.errors.any? %>
       <div class="alert alert-danger" role="alert">
            A simple danger alert—check it out!
      </div>

            <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
            <ul>
              <% @gossips.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
      <% end %>

  </body>
</html>